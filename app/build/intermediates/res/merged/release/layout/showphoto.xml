<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/show_image"
        android:layout_marginBottom="200dp"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" />

    <FrameLayout
        android:layout_gravity="bottom"
        android:background="@color/pure_black"
        android:layout_width="fill_parent"
        android:layout_height="200dp">

        <com.linda.facebattle.Util.MyTextView
            android:textSize="15sp"
            android:textColor="@color/white"
            android:layout_marginTop="16dp"
            android:layout_gravity="center|top"
            android:text="UPLOAD AND ANALYSE THIS PHOTO?"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        
        <com.linda.facebattle.Util.MyButton
            android:id="@+id/add_battle"
            android:text="SURE~"
            android:background="@drawable/login_shape"
            android:layout_marginRight="32dp"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="60dp"
            android:layout_width="fill_parent"
            android:layout_height="40dp" />

        <com.linda.facebattle.Util.MyButton
            android:id="@+id/choose_anther_one"
            android:textColor="@color/white"
            android:text="CHOOSE ANOTHER ONE"
            android:background="@drawable/login_shape_black"
            android:layout_marginRight="32dp"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="120dp"
            android:layout_width="fill_parent"
            android:layout_height="40dp" />

    </FrameLayout>

</FrameLayout>